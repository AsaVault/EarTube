@*@model SongModel*@
@model IEnumerable<SongModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@foreach (var song in Model)
{
    
        <div class="card mb-4 shadow-sm mx-md-3">
            <a asp-route="songDetails" asp-route-id="@song.Id">
                <img src="@(string.IsNullOrEmpty(song.CoverImageUrl) ? "/images/unsplash.jpg" : song.CoverImageUrl)" class="img-thumbnail" style="width:340px; height:145px; " />
            </a>
            <div class="card-body">
                <p class="card-title text-uppercase"><strong>@(string.IsNullOrEmpty(song.Title) ? "Name is not available" : song.Title)</strong></p>
                <p class="card-text text-muted">Uploaded by: @(song?.User?.FirstName + " " + song?.User?.LastName) </p>
            </div>
        </div>
    
}

