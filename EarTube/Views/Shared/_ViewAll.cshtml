@*@model SongModel*@
@model IEnumerable<SongModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@foreach (var song in Model)
{
    
        <div class="card mb-md-5 shadow-sm mx-md-2 " >
            <a asp-route="songDetails" asp-route-id="@song.Id">
                <img src="@(string.IsNullOrEmpty(song.CoverImageUrl) ? "/images/unsplash.jpg" : song.CoverImageUrl)" class="img-thumbnail p-0 border-0" style="width:340px; height:145px; " />
            </a>
            <div class="card-body p-md-2">
                <div id="details" class="row col-md-12">
                    <div class="col-md-2 p-1 align-items-center">
                        <img src="@(string.IsNullOrEmpty(song.CoverImageUrl) ? "/images/unsplash.jpg" : song.CoverImageUrl)" style="border-radius:50%; width: 36px; height: 36px;" class="img-fluid border-0" />
                    </div>
                    <div class="col-md-10 p-md-2">
                        <p class="card-title text-capitalize pb-2 m-0"><a asp-route="songDetails" asp-route-id="@song.Id"><span>@(string.IsNullOrEmpty(song.Title) ? "Name is not available" : song.Title)</span></a></p>
                        <p class="card-text text-muted m-0 text-capitalize">@(song?.User?.FirstName + " " + song?.User?.LastName) </p>
                        <span class="card-text text-muted pr-md-2 ">Views </span>
                        <span class="card-text text-muted ">DateTime </span>
                    </div>
                </div>
            </div>
        </div>
    
}

