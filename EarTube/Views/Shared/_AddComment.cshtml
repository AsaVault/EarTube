@model SongModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="">
    @foreach (var comment in Model.Comment)
    {
    <div class="mb-4 row col-md-12" id="commentSection">
        <div class="col-md-1 p-1 align-items-center">
            <img src="@(string.IsNullOrEmpty(comment?.User?.UserImageUrl) ? "/images/Avatar.png" : comment.User.UserImageUrl)" style="border-radius:50%; width: 36px; height: 36px;" class="img-fluid border-0" />
        </div>
        <div class="col-md-11 p-1">
            <h6 class="text-primary text-capitalize">@(comment?.User?.FirstName  + " " + comment?.User?.LastName)</h6>
            <p class="pl-2 pb-1 m-0">@comment.Description</p>
            <span id="buttons" class="p-1">
                <span class="text-muted">
                    <a asp-route="likeComment" asp-route-id="@comment.Id"
                       data-ajax="true" data-ajax-success="AjaxSuccess"
                       class="pl-1"><i class="fas fa-thumbs-up"><span class="px-2  ">@comment.CommentLikes.ToString()</span></i></a>
                </span>

                <span class="text-muted">
                    <a asp-route="dislikeComment" asp-route-id="@comment.Id"
                       data-ajax="true" data-ajax-success="AjaxSuccess"
                       class="pl-1 @((UserManager.GetUserId(User).ToString() != Model.UserId)? " ": "btn disabled")"><i class="fas fa-thumbs-down"><span class="px-2">@comment.CommentDisikes.ToString()</span></i></a>
                </span>

            </span>
        </div>
    </div>
    }
</div>

@section scripts {
    <script>
        

    </script>

}